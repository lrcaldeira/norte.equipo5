<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="wrapper">
        <header id="header">
            <div id="logo">
                <h1><a href="/">Arte con Arte</a></h1>
            </div>
        </header>
        <nav id="menu">
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/Artist/Index/">Artistas</a></li>
                <li><a href="/home/about/">Acerca</a></li>
                <li><a href="/home/contact/">Contacto</a></li>
            </ul>
            @Html.Partial("_LoginPartial")

        </nav>
        <section id="page">
            <article id="content">
                @RenderBody()
            </article>

            <article id="sidebar">
                <ul>
                    <li id="search">
                        <h2 class="search">Buscar </h2>
                        <form method="get" action="">
                            <fieldset>
                                <input type="text" id="search-text" name="s" value="" autocomplete="off" />
                                <input type="submit" id="search-submit" value="Buscar" />
                            </fieldset>
                        </form>
                    </li>
                    <li>
                        <h2 class="categories">Pintores</h2>
                        <ul>
                            <li><a href="#"> Picasso</a></li>
                            <li><a href="#">Da vinci</a></li>
                            <li><a href="#">Van Gogh</a></li>
                        </ul>
                    </li>
             
                        
                </ul>
            </article>
            <div style="clear: both; height: 1px"></div>
        </section>

        <footer id="footer">
            <p>&copy; @DateTime.Now.Year - Pinturas | El arte de Pintar</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)

</body>
</html>
@model norte.equipo5.Data.Model.Product

@{ ViewBag.Title = "Nuevo Producto";}

<div class="post">
    <h2 class="title"><a href="#"> Nuevo Producto</a></h2>
    <p class="byline">
        <h4>Producto</h4>
    </p>
    <div>
        @using (Html.BeginForm("Create", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form">
                <hr />
                <span class="text-danger">@ViewBag.MessageDanger</span>
                <div class="form-group">
                    @Html.LabelFor(model => model.Title)
                    <div>
                        @Html.EditorFor(model => model.Title)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Description)
                    <div>
                        @Html.EditorFor(model => model.Description)
                    </div>
                </div>
                <div class="form-group">
                    <div>
                        <p> Artista </p>
                        @Html.DropDownList("ArtistID", null, htmlAttributes: new { @class = "drop-down-list" })

                    </div>

                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Image)
                    <div>
                        @Html.TextBox("file", null, new { type = "file", required = "required" })

                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Price)
                    <div>
                        @Html.EditorFor(model => model.Price)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.QuantitySold)
                    <div>
                        @Html.EditorFor(model => model.QuantitySold)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.AvgStars)
                    <div>
                        @Html.EditorFor(model => model.AvgStars)
                    </div>
                </div>
                <div class="form-group">
                    <div>
                        <input type="submit" value="Guardar" class="btn-input" />
                    </div>
                </div>
            </div>
        }
    </div>
    <div>
        @Html.ActionLink("Volver a la lista", "Index")
    </div>

</div>